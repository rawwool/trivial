            <ItemsControl 
              
              Width="Auto"
              Height="Auto"
              ItemsSource="{Binding ElementName=dashboard, Path=Actions}"
              ItemTemplate="{StaticResource itemsTemplate}"
              >
                <!--<ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
