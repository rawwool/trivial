          Height="50"
          CornerRadius="5,5,5,5"
          Margin="1,0,1,0"
          Padding="1,1,1,1">
                <Border.InputBindings>
                    <MouseBinding MouseAction="LeftClick" 
                                  Command="{Binding MyCustomCommand}"></MouseBinding>
                </Border.InputBindings>
